<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_home"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.pocwebviewapp.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_webViewIntegrationFragment"
            app:destination="@id/webViewIntegrationFragment" />
    </fragment>

    <fragment
        android:id="@+id/webViewIntegrationFragment"
        android:name="com.example.pocwebviewapp.webintegration.WebViewIntegrationFragment"
        android:label="fragment_web_view_integration"
        tools:layout="@layout/fragment_web_view_integration" />
</navigation>
